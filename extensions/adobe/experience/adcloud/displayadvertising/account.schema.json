  "$id": "https://ns.adobe.com/experience/adcloud/displayadvertising/account",
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "Display Advertising Account",
  "type": "object",
  "description": "Adobe Advertising Cloud DSP Account Details.",
  "definitions": {
    "account": {
      "properties": {
        "xdm:accountId": {
          "title": "Account Identifier",
          "type": "integer",
          "description": "Identifier of the account."
        },
        "xdm:accountKey": {
          "title": "Account Key",
          "type": "string",
          "description": "External Identifier of the account."
        },
        "xdm:accountName": {
          "title": "Account Name",
          "type": "string",
          "description": "Name of the account."
        },
        "xdm:accountType": {
          "title": "Account Type",
          "type": "string",
          "description": "Type of the account.",
          "enum": [
            "Agency",
            "TradingDesk",
            "BrandDirectAgencyManaged",
            "BrandDirectNoAgency",
            "AdNetwork",
            "PublisherAudienceExtension",
            "Other"
          ],
          "meta:enum": {
            "Agency": "agency",
            "TradingDesk": "trading desk",
            "BrandDirectAgencyManaged": "brand direct agency managed",
            "BrandDirectNoAgency": "brand direct no agency",
            "AdNetwork": "ad network ",
            "PublisherAudienceExtension": "publisher audience extension ",
            "Other" : "other "
          }
        },
        "xdm:productName": {
          "title": "Product Name",
          "type": "string",
          "description": "The name of the product associated with this account.",
          "enum": [
            "PlayTime",
            "InPlay",
            "OneLoad",
            "PrivateExchange"
          ],
          "meta:enum": {
            "PlayTime": "PlayTime",
            "InPlay": "InPlay",
            "OneLoad": "OneLoad",
            "PrivateExchange": "PrivateExchange"
          }
        },
        "xdm:currency": {
          "title": "Account Currency",
          "type": "string",
          "examples": ["USD", "EUR", "JPY"],
          "pattern": "^[A-Z]{3}$",
          "description": "The ISO 4217 billing currency code for the account."
        }
      }
    }
  },
  "allOf": [
    {
      "$ref": "#/definitions/account"
    }
  ],
  "meta:status": "experimental"
}
