  "$id": "https://ns.adobe.com/experience/adcloud/displayadvertising/placement",
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "Display Advertising Campaign Placement",
  "type": "object",
  "meta:extends": ["https://ns.adobe.com/xdm/data/record"],
  "description": "Adobe Advertising Cloud DSP Campaign Placement hierarchy details such as name, type, campaign, account, package, advertiser, account.",
  "definitions": {
    "displayadvertising-placement": {
      "properties": {
        "xdm:placementKey": {
          "title": "Placement Key",
          "type": "string",
          "description": "Campaign Placement external unique identifier."
        },
        "xdm:placementName": {
          "title": "Name",
          "type": "string",
          "description": "Campaign Placement name."
        },
        "xdm:placementType": {
          "title": "Placement Type",
          "type": "string",
          "description": "Budget Type indicates how the allocated budget will be spent",
          "enum": [
            "Direct",
            "Site",
            "Network",
            "Planner",
            "Audit",
            "ParentPlan",
            "ChildPlan",
            "Template",
            "SAS"
          ],
          "meta:enum": {
            "Direct":  "Direct",
            "Site":  "Site ",
            "Network":  "Network",
            "Planner":  " Planner",
            "Audit":  "Audit ",
            "ParentPlan": "ParentPlan ",
            "ChildPlan" :  "ChildPlan ",
            "Template" :  "Template ",
            "SAS": "SAS "
          }
        },
        "xdm:placementStartTime": {
          "title": "Start Date and Time",
          "type": "string",
          "format": "date-time",
          "description": "The date on which a placement starts showing ads (ms since Jan 1, 1970)"
          },
        "xdm:placementEndTime": {
          "title": "End Date and Time",
          "type": "string",
          "format": "date-time",
          "description": "The date after which a placement stops showing ads (ms since Jan 1, 1970)."
        },
        "xdm:placementBudget": {
          "title": "Campaign Placement Budget",
          "type": "integer",
          "description": "Campaign placement budget."
        }
      },
      "xdm:campaign": {
        "title": "Campaign Details",
        "description": "Campaign Details",
        "$ref": "https://ns.adobe.com/experience/adcloud/displayadvertising/campaign"
      },
      "xdm:insertionorder": {
        "title": "Insertion Order Details",
        "description": "Insertion Order Details",
        "$ref": "https://ns.adobe.com/experience/adcloud/displayadvertising/insertionorder"
      },
      "xdm:package": {
        "title": "Package Details",
        "description": "Package Details",
        "$ref": "https://ns.adobe.com/experience/adcloud/displayadvertising/package"
      },
      "xdm:advertiser": {
        "title": "Advertiser Details",
        "description": "Advertiser Details",
        "$ref": "https://ns.adobe.com/experience/adcloud/displayadvertising/advertiser"
      },
      "xdm:account": {
        "title": "Account Details",
        "description": "Account Details",
        "$ref": "https://ns.adobe.com/experience/adcloud/displayadvertising/account"
      }
    }
  },
  "required": [
    "xdm:advertiser",
    "xdm:campaign"
  ],
  "allOf": [
    {
      "$ref": "https://ns.adobe.com/xdm/data/record"
    },
    {
      "$ref": "https://ns.adobe.com/xdm/common/auditable"
    },
    {
      "$ref": "#/definitions/displayadvertising-placement"
    }
  ],
  "meta:status": "experimental"
}
